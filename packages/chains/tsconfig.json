{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "types": [],
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/"]
}
