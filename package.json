{
  "name": "starknet-react",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "website",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "docs:start": "yarn workspace website run start",
    "example:next": "yarn workspace starknet-react-next run dev",
    "lint": "eslint packages examples --ext .js,.ts,.tsx",
    "types:check": "tsc --skipLibCheck --noEmit",
    "test": "jest --silent",
    "release": "yarn build && yarn changeset publish",
    "postinstall": "yarn run prepare",
    "prepare": "husky install"
  },
  "dependencies": {
    "@argent/get-starknet": "^2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "starknet": "^2.5"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.20.0",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@parcel/packager-ts": "^2.2.1",
    "@parcel/transformer-typescript-types": "^2.2.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-react-hooks": "^1.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "just": "^0.1.8",
    "lint-staged": "^12.3.3",
    "parcel": "^2.2.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "text-encoding": "^0.7.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "semi": false
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "plugins": [
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "(^_)|(^tw$)",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --quiet --fix --cache"
  },
  "jest": {
    "roots": [
      "<rootDir>/packages"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(test).+(ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/packages/core/test/jest.setup.js"
    ]
  },
  "browserslist": "> 0.25%, not dead"
}
